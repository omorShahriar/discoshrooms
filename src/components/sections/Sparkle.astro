---
import { getImage, Image } from "astro:assets";

import background from "@/assets/gradient-bg-cloud.jpg";

const optimizedBackground = await getImage({
  src: background,
  format: "webp",
});
import hqcs from "@/assets/hqcs.png";
import hmp from "@/assets/hmp.png";
import mbg from "@/assets/mbg.png";
---

<div
  style={`background-image: url(${optimizedBackground.src});`}
  class="pt-32 pb-64 bg-cover w-full bg-center bg-no-repeat"
>
  <section>
    <h2 class="text-white text-center my-8">
      Get the Sparkle everyone is talking about!
    </h2>
    <div class="py-4 flex gap-2 max-w-fit mx-auto">
      <Image src={hqcs} alt="HQCS" width={223} height={276} />
      <Image src={hmp} alt="HMP" width={223} height={276} />
      <Image src={mbg} alt="mbg" width={223} height={276} />
    </div>
  </section>
</div>
